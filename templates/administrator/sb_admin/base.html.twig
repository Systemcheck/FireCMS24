<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>{{params.sitename}}</title>
    {% block stylesheets %} 
    {{ encore_entry_link_tags('sb_admin') }}
    <!--<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://blackrockdigital.github.io/startbootstrap-sb-admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    -->
    {% endblock %}
  </head>

  <body id="page-top">
  {{ include('navigation/navigation.html.twig', { 'title': 'FireControl' }) }}

  <div id="wrapper">

    <!-- Sidebar -->
    {% if params.widgets.sidebar is defined %}
      <ul class="sidebar navbar-nav">
        {% for param in params.widgets.sidebar %}
          <li>
        {{ render (controller('App\\Controller\\WidgetController::loadModules', 
                { 'position' : 'sidebar',
                  'id' : param,
                  'pathInfo' : params.pathInfo } ))}}
          </li>     
        {% endfor %} 
      </ul>
    {% endif %} 
    <!-- Sidebar Ende -->
    <div id="content-wrapper">
      <div class="container-fluid">
      
     <!-- Content-->
      {% for message in app.flashes('success') %}
        <div class="alert alert-success flash-notice">
        {{ message }}
        </div>
      {% endfor %}
{% for message in app.flashes('danger') %}
  <div class="alert alert-danger flash-notice">
    {{ message }}
  </div>
{% endfor %} 

<!-- Top-a Modules -->
{% if params.widgets.topA is defined %}
<div class="container top-a">
  <div class="row">
    {% for param in params.widgets.topA %}
    {{ render (controller('App\\Controller\\WidgetController::loadModules', 
                { 'position' : 'top-a',
                  'id' : param,
                  'pathInfo' : params.pathInfo } ))}} 
    {% endfor %} 
  </div>
</div>
{% endif %}

<!-- Top-b Modules -->
{% if params.widgets.topB is defined %}
<div class="container top-b">
  <div class="row">
    {% for param in params.widgets.topB %}
    {{ render (controller('App\\Controller\\WidgetController::loadModules', 
                { 'position' : 'top-b',
                  'id' : param,
                  'pathInfo' : params.pathInfo } ))}} 
    {% endfor %} 
  </div>
</div>
{% endif %}

<!-- Breadcrumbs-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Overview</li>
  </ol>
<!-- Breadcrumbs Ende -->

<!-- Content -->          
{% block body %}{% endblock %}
          
<!--Footer-->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright © Daniel Richter 2019</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
          </div>
          <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
          <div class="modal-footer">
            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
            <a class="btn btn-primary" href="login.html">Logout</a>
          </div>
        </div>
      </div>
    </div>
    {% block javascripts %}
        
   
     {{ encore_entry_script_tags('app') }}
  <!-- Page level plugin JavaScript-->

    
{% endblock %}
{% block addjs %}
{% endblock %}

  </body>

</html>

